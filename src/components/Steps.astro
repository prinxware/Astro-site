<style lang="scss">
    $primary-color:#333232;
    $secondary-color:#6F75E8;
    $light-color:#A594F9;
    $font-stack:'Roboto', sans-serif;
    
    .container{
        font-family: $font-stack;
        text-align: center;
        padding: 3rem 2rem;
        background-color: #EEEEEE;
        h1{
            color: $primary-color;
            font-size: 25px;
            font-weight: 500;
        }
        .cards{
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            border-radius: 15px;
            margin-top: 2rem;
            background-color: $secondary-color;
            color: white;
            padding: 3rem 3rem;
            margin-bottom: 2.2rem;
            .icon{
                width: 4rem;
                min-height: 4rem;
                border-radius: 2rem;
                background-color: white;
                margin-bottom: 1rem;
                padding: 1.3rem 1rem;
                p{
                    color: $light-color;
                    font-weight: 700;
                    font-size: 30px;
                }
            }
            p{
                font-size: 13px;
                font-weight: 400;
                line-height: 1.2rem;
            }
        }
        .btn-trade{
            background-color: $light-color;
            padding: .7rem 3rem;
            border-radius: 50px;
            color: white;
        }
    }


@media screen and (min-device-width: 1200px) and (max-device-width: 1600px) and (-webkit-min-device-pixel-ratio: 1){

        .container{
            font-family: $font-stack;
            text-align: center;
            padding: 7rem 4rem;
                h1{
                    color: $primary-color;
                    font-size: 32px;
                    font-weight: 500;
                    margin-bottom: 1rem;
                }
                .bs{
                    display: grid;
                    grid-template-columns: 1fr 1fr 1fr;
                    align-items: center;
                    justify-content: center;
                    gap: 2rem;
                    .cards{
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        flex-direction: column;
                        border-radius: 20px;
                        margin-top: 2rem;
                        background-color: $secondary-color;
                        color: white;
                        padding: 4rem 3rem;
                        margin-bottom: 4rem;
                        .icon{
                            width: 4rem;
                            min-height: 4rem;
                            border-radius: 2rem;
                            background-color: white;
                            margin-bottom: 1rem;
                            padding: 1.3rem 1rem;
                            p{
                                color: $secondary-color;
                                font-weight: 700;
                                font-size: 30px;
                            }
                        }
                        p{
                            font-size: 13px;
                            font-weight: 400;
                            line-height: 1.2rem;
                        }
                    }
                }
                .btn-trade{
                background-color: $light-color;
                padding: 1rem 6rem;
                border-radius: 50px;
                color: white;
                transition: 0.3s;
                }  
                .btn-trade:hover{
                    background-color: white;
                    color: $secondary-color;
                }
        }
    }
</style>